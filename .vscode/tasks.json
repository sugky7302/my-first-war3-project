{
    "version": "2.0.0",
    "type": "shell",
    "inputs": [
        {
            "id": "map",
            "type": "promptString",
            "description": "請輸入地圖名稱",
            "default": "map"
        }
    ],
    "tasks": [
        {
            "label": "執行",
            "type": "shell",
            "command": "${workspaceFolder}\\.vscode\\run.bat",
            "args": [
                "${workspaceRoot}",
                "${input:map}"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "打包"
            ]
        },
        {
            "label": "配置",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\配置.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "語法檢查",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\"",
            "args": [
                ".\\tools\\語法檢查.lua",
                "${workspaceRoot}"
            ],
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            }
        },
        {
            "label": "打包",
            "type": "shell",
            "command": "${workspaceFolder}\\.vscode\\w3x2lni.bat",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "${workspaceRoot}",
                "obj",
                "${input:map}"
            ]
        },
        {
            "label": "解包",
            "command": "${workspaceFolder}\\.vscode\\w3x2lni.bat",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "${workspaceRoot}",
                "lni",
                "${input:map}",
            ]
        },
        {
            "label": "發佈(Slk)",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/w2l.exe\"",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "args": [
                "slk",
                "${workspaceRoot}",
                "${workspaceRoot}/${input:map}.w3x"
            ]
        },
        {
            "label": "語法監控",
            "command": "chcp 65001 && \"${workspaceRoot}/tools/w3x2lni/bin/w3x2lni-lua.exe\" -e \"package.cpath=package.cpath..';'..[[${workspaceRoot}/tools/?.dll]]\"",
            "args": [
                ".\\tools\\語法檢查.lua",
                "${workspaceRoot}",
                "--watch"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "\\[Watch\\] File change detected\\.",
                    "endsPattern": "\\[Watch\\] Complete\\."
                }
            }
        }
    ]
}